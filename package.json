{
	"name": "clippy-sveltekit",
	"version": "0.1.0",
	"description": "Modern Svelte 5 port of Microsoft Office assistants (Clippy, Merlin, Rover, etc.)",
	"license": "MIT",
	"type": "module",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./agents/*": "./dist/agents/*"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"prepublishOnly": "npm run build"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.3.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"keywords": [
		"clippy",
		"svelte",
		"sveltekit",
		"svelte5",
		"office-assistant",
		"microsoft-agent",
		"merlin",
		"rover"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/freeman412/clippy-sveltekit"
	}
}
